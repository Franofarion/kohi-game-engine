{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "./engine/build.bat"
            },
            "linux": {
                "command": "./engine/build.sh"
            },
            "options": {
                "cwd": "./engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Testbed",
            "windows": {
                "command": "./testbed/build.bat"
            },
            "linux": {
                "command": "./testbed/build.sh"
            },
            "options": {
                "cwd": "./testbed"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "./build-all.bat",
            },
            "linux": {
                "command": "./build-all.sh",
            },
            "options": {
                "cwd": "."
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}